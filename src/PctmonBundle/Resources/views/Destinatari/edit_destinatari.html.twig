{% extends 'base.html.twig' %}
{% block page_content %}
    <div class="col-md-6 col-lg-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
        <div class="box box-primary">
            {% if is_granted('ROLE_ADMIN') %}
            <div class="box-header with-border">
                <h3 class="box-title">Editar destinatari.</h3><br>
                <a href="{{ path('destinatari_index') }}">Tornar a llistat</a>
            </div>
            <div class="box-body">
                {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}
                <div class="form-group ">
                    <i class="glyphicon glyphicon-user"></i>
                    {{ form_label(edit_form.nom) }}
                    {{ form_errors(edit_form.nom) }}
                    {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group ">
                    <i class="glyphicon glyphicon-envelope"></i>
                    {{ form_label(edit_form.email) }}
                    {{ form_errors(edit_form.email) }}
                    {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}

                </div>
            </div>
            <div class="box-footer">
                <button class="btn btn-primary" type="submit">Editar destinatari</button>
                {{ form_end(edit_form) }}

                <a href="{{ path('destinatari_delete', { 'id':destinatari.id }) }}" onclick="
return confirm('¿Estas segur que vols eliminar el destinatari?')">
                    <button class="btn btn-danger">Eliminar destinatari</button></a>
            {% else %}
            </div>
                <div class="box-header with-border">
                <h3 class="box-title">No tens permís per estar aquí.</h3><br>
                <a href="{{ path('destinatari_index') }}">Back to the list</a>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
