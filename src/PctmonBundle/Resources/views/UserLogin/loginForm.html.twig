{% extends "base.html.twig" %}
{% block title %}Login{% endblock %}
{% block body %}

    <body class="hold-transition login-page ">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Monitor</b>PCT</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Omple els camps per iniciar la teva sessi√≥</p>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form class="form-horizontal" action="{{ path('login_check') }}" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" id="username" placeholder="Nom usuari" name="_username"
                           value="{{ last_username }}"/>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" id="password" placeholder="Contrassenya" name="_password"/>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me"/>Recorda'm
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Inici</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>


        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    </body>
{% endblock %}